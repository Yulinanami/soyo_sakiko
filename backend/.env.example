# SoyoSaki Backend Environment Variables
# Copy this file to .env and fill in the values

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/soyosaki

# Redis
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO

# Adapter concurrency (per adapter pool)
ADAPTER_MAX_WORKERS=8

# JWT Secret (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-me-in-production

# CORS Origins (comma separated for multiple)
CORS_ORIGINS=["http://localhost:5173","http://127.0.0.1:5173"]

# Pixiv (optional - get refresh token from Pixiv OAuth)
PIXIV_REFRESH_TOKEN=

# Lofter (optional)
LOFTER_COOKIE=
LOFTER_CAPTTOKEN=
LOFTER_DYNAMIC_ENABLED=false
LOFTER_DYNAMIC_HEADLESS=true
LOFTER_DYNAMIC_MAX_ITEMS=30
LOFTER_DYNAMIC_MAX_SCROLLS=8
LOFTER_DYNAMIC_SCROLL_WAIT_MS=1200
LOFTER_DYNAMIC_INITIAL_WAIT_MS=1500
LOFTER_MAX_PAGE_SIZE=30
LOFTER_DYNAMIC_CACHE_TTL=300

# Reading history
READING_HISTORY_TTL_DAYS=30
